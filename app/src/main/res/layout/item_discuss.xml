<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iconAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tvFlow"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="1楼"
        android:textColor="@color/font_gray_b"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/iconAvatar"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼主"
        android:textColor="@color/font_gray_b"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/iconAvatar"
        app:layout_constraintLeft_toRightOf="@+id/iconAvatar"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1个小时前"
        android:textColor="@color/font_gray_b"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintLeft_toRightOf="@+id/iconAvatar"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我不想奋斗了我不想奋斗了我不想奋斗了我不想奋斗了"
        app:layout_constraintLeft_toLeftOf="@+id/tvTime"
        app:layout_constraintTop_toTopOf="@+id/tvFlow" />

</android.support.constraint.ConstraintLayout>